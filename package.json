{
  "name": "lorem-ipsum.ir",
  "version": "0.0.0",
  "description": "lorem-ipsum.ir website.",
  "main": "index.js",
  "repository": "git@github.com:njfamirm/lorem-ipsum.ir.git",
  "author": "S. Amir Mohammad Najafi <njfamirm@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dp": "run-s build:production deploy:production",
    "ds": "run-s build:staging deploy:staging",
    "s": "yarn start",
    "w": "yarn start",
    "b": "yarn build",
    "bp": "yarn build:production",
    "bs": "yarn build:stage",
    "c": "yarn clean",
    "cb": "run-s clean build",
    "start": "eleventy --serve",
    "watch": "yarn start",
    "clean": "rm -rf dist",
    "build": "eleventy",
    "build:production": "siteUrl='https://www.lorem-ipsum.ir' NODE_ENV='production' MY_ENVIRONMENT=production run-s clean build",
    "build:staging": "siteUrl='https://beta.lorem-ipsum.ir' NODE_ENV='production' MY_ENVIRONMENT=production noIndex=1 run-s clean build",
    "deploy:production": "wrangler pages deploy --branch=main --project-name=lorem-ipsum-ir dist",
    "deploy:staging": "wrangler pages deploy --branch=main --project-name=beta-lorem-ipsum-ir dist"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@swc/html": "^0.0.28",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.1.3",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "wrangler": "^3.6.0"
  },
  "packageManager": "yarn@3.6.3"
}
