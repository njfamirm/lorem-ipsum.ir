{
  "name": "lorem-ipsum.ir",
  "version": "0.1.1",
  "description": "lorem-ipsum.ir website.",
  "main": "index.js",
  "repository": "git@github.com:njfamirm/lorem-ipsum.ir.git",
  "author": "S. Amir Mohammad Najafi <njfamirm@gmail.com>",
  "license": "MIT",
  "browserslist": "> 1.5%, not dead",
  "scripts": {
    "dp": "run-s build:production deploy:production",
    "ds": "run-s build:staging deploy:staging",
    "s": "yarn start",
    "w": "yarn start",
    "b": "yarn build",
    "f": "yarn format",
    "l": "yarn lint",
    "rl": "run-s clean build release pt dp",
    "pt": "git push --follow-tags origin main",
    "bp": "yarn build:production",
    "bs": "yarn build:stage",
    "c": "yarn clean",
    "cb": "run-s clean build",
    "lint": "run-s lint:ts",
    "lint:ts": "eslint . --config .eslintrc.json --ext .ts",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn lint:ts --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "start": "eleventy --serve",
    "watch": "yarn start",
    "clean": "git clean -d -x -f --exclude=node_modules --exclude=_data --exclude=.yarn",
    "build": "yarn build:eleventy",
    "build:tsc": "tsc --build --pretty",
    "build:eleventy": "eleventy",
    "build:production": "siteUrl='https://www.lorem-ipsum.ir' NODE_ENV='production' MY_ENVIRONMENT=production run-s clean build",
    "build:staging": "siteUrl='https://beta.lorem-ipsum.ir' NODE_ENV='production' MY_ENVIRONMENT=production noIndex=1 run-s clean build",
    "deploy:production": "wrangler pages deploy --branch=main --project-name=lorem-ipsum-ir dist",
    "deploy:staging": "wrangler pages deploy --branch=main --project-name=beta-lorem-ipsum-ir dist",
    "release": "standard-version -s"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@alwatr/icon-set-material": "^0.1.1",
    "@alwatr/style": "^1.2.0",
    "@swc/html": "^0.0.28",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.4",
    "eslint": "^8.52.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.1.4",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "wrangler": "^3.10.1"
  },
  "packageManager": "yarn@3.6.3"
}
