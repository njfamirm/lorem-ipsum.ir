<header class="header flex flex-row justify-between items-center w-screen fixed px-6 py-3 gap-10 z-20 top-0">
  <a href="/"><img class="w-10" src="/img/logo.png" alt="logo"></a>
  <div class="flex flex-row justify-end grow gap-8 items-center text-md font-bold">
    {% for menu in navigation.topAppBar %}
      <a class="text-neutral-700 hidden lg:block hover:text-neutral-700 hover:no-underline {% if page.url == menu.url %} text-neutral-950 {% endif %}" href="{{ menu.url }}">
        {{ menu.key }}
      </a>
    {% endfor %}
    <span class="menu-button block lg:hidden m-1 p-0 bg-transparent cursor-pointer z-30">
      <svg xmlns="http://www.w3.org/2000/svg" height="32" viewBox="0 -960 960 960" width="32"><path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/></svg>
    </span>
  </div>
</header>
